<!DOCTYPE html>
<html>
<head>
  <title>Kingclothing</title>
   <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
   <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js">
  </script>
 
  <%= csrf_meta_tags %>
      <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
</head>
<body class='<%= controller.controller_name %>'>
	<div class="container-fluid">
		<div class="row">
	<div id="banner">
		<%= image_tag('king logos.png') %>
		<%= @page_title || "King Clothing" %>
	</div>
</div>

	<div id="columns" class="col-lg-12">
		<div id="menu" class="col-lg-12">
			<div <% if session[:user_id] %>class="col-lg-5 main_menu" <% else %> class="col-lg-10 main_menu" <% end %>>
			<ul class="nav nav-tabs">
				<li><%= link_to "Home", store_path %></li>
				<li><%= link_to "Questions", questions_path %></li>
				<li><%= link_to "News", news_path %></li>
				<li><%= link_to "Contact", contact_path %></li>
			</ul>
		</div>
		<% if session[:user_id] %>
		<div class="col-lg-5 admin_menu">
				<ul class="nav nav-tabs">
					<li><%= link_to 'Orders', orders_path %></li>
					<li><%= link_to 'Products', products_path %></li>
					<li><%= link_to 'Users', users_path %></li>
				</ul>
			</div>
				<div class="col-lg-2 logout">
				<%= button_to 'Logout', logout_path, method: :delete , :html => {:class => "menu" } %>
			</div>
			<% end %>
		</div>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
			<div class="navbar-header">
	
      <a class="navbar-brand" <%= link_to "King Clothing", store_path %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Questions", questions_path %><span class="sr-only">(current)</span></a></li>
        <li><%= link_to "News", news_path %></li>
         <li><%= link_to "Contact", contact_path %></li>

      </ul>
		<% if session[:user_id] %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Orders', orders_path %></li>
        <li><%= link_to 'Products', products_path %></li>
        <li><%= link_to 'Users', users_path %></li>
        <li><%= button_to 'Logout', logout_path, method: :delete , form_class: "navbar-btn", class: "navbar-btn", :html => {:class => "menu navbar-btn" } %></li>

      </ul>
    <% end %>
    </div><!-- /.navbar-collapse -->
			</div>

		</nav>

		<div id="side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
					<%= render @cart %>
				<% end %>
			<% end %>
			
			
	
		</div>
		<div id="main" class="col-md-10">
			<%= yield %>
		</div>
	</div>
</div>
</div>
</body>
</html>
